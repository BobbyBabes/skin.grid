<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol></defaultcontrol>

	<onload>RunScript(script.grab.fanart,mode=random,refresh=30)</onload>

	<onload condition="String.IsEqual(Skin.String(homemenu.layout),horizontal)">SetProperty(SubMenuIsOpen,false,Home)</onload>

	<onload condition="System.HasAddon(script.colorbox) + [String.IsEqual(Skin.String(home.fx),blur) | String.IsEqual(Skin.String(home.fx),color) | String.IsEqual(Skin.String(home.fx),coloronly)]">RunScript(script.colorbox,daemon=True)</onload>

	<onload>SetProperty(FIVE_daemon_set,blur,home)</onload>


	<!--<onload>SetProperty(NINE_manual_set,"var=quality,set=8|var=blursize,set=8|var=bitsize,set=1|var=pixelsize,set=10|var=black,set=000000|var=white,set=ffffff",home)</onload>-->
	<onload>SetProperty(NINE_manual_set,"var=comp,set=hue|var=bump,set=16|var=hsv,set=0;-0.2;0.2|var=quality,set=8|var=blursize,set=10|var=bitsize,set=1|var=pixelsize,set=12|var=black,set=000000|var=white,set=ffffff")</onload>


	<onload>Skin.SetString(SkinHelper.RandomFanartDelay,20)</onload>

	<onload condition="!String.IsEqual(Skin.String(home.background),fanart) + !String.IsEqual(Skin.String(home.background),videofanart)">Skin.SetString(HomeLoaded,True)</onload>
	<onload condition="Skin.HasSetting(startup.playlist)">PlayMedia($INFO[Skin.String(startup.playlist.path)])</onload>
	<onload condition="String.IsEmpty(Skin.String(autoscroll.speed))">Skin.SetString(autoscroll.speed,none)</onload>
	<onload condition="String.IsEmpty(Skin.String(home.background)) + [Library.HasContent(movies) | Library.HasContent(tvshows)]">Skin.SetString(home.background,fanart-video)</onload>
	<onload condition="String.IsEmpty(Skin.String(home.background)) + !Library.HasContent(movies) + !Library.HasContent(tvshows)">Skin.SetString(home.background,custom)</onload>
	<onload condition="String.IsEmpty(Skin.String(global.background)) + [Library.HasContent(movies) | Library.HasContent(tvshows)]">Skin.SetString(global.background,fanart)</onload>
	<onload condition="String.IsEmpty(Skin.String(date.enabled))">Skin.SetString(date.enabled,none)</onload>
	<onload condition="String.IsEmpty(Skin.String(date.enabled))">Skin.SetString(date.enabled,none)</onload>
	<onload condition="String.IsEmpty(Skin.String(epg.scrollspeed))">Skin.SetString(epg.scrollspeed,normal)</onload>
	<onload condition="String.IsEmpty(Skin.String(global.scrolltype))">Skin.SetString(global.scrolltype,active)</onload>
	<onload condition="String.IsEmpty(Skin.String(home.status))">Skin.SetString(home.status,none)</onload>
	<onload condition="String.IsEmpty(Skin.String(homemenu.layout))">Skin.SetString(homemenu.layout,vertical)</onload>

	<onload condition="String.IsEmpty(Skin.String(ratings.music))">Skin.SetString(ratings.music,disabled)</onload>
	<onload condition="String.IsEmpty(Skin.String(ratings.overlay))">Skin.SetString(ratings.overlay,disabled)</onload>
	<onload condition="String.IsEmpty(Skin.String(ratings.video))">Skin.SetString(ratings.video,disabled)</onload>
	<onload condition="String.IsEmpty(Skin.String(view.list.art))">Skin.SetString(view.list.art,fanart)</onload>
	<onload condition="String.IsEmpty(Skin.String(views.landscape.art))">Skin.SetString(views.landscape.art,fanart)</onload>
	<onload condition="System.HasAddon(script.artistslideshow) + String.IsEmpty(Window(Visualisation).Property(ArtistSlideshowRunning))">RunScript(script.artistslideshow, daemon=True)</onload>

	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload>

</window>