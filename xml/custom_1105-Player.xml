			<include content="global_Notification" condition="!String.IsEqual(Skin.String(view.list.art.Label),posters)">
				<param name="Left">1036</param>
				<param name="Height">108</param>
				<param name="Width">756</param>
				<param name="Symbol">$VAR[toast:Symbol]</param>
				<param name="Label">$VAR[toast:PlayingTitle]</param>
				<param name="Label2">$VAR[toast:PlayingInfo]</param>
			</include>
		</control>

		<control type="group">
			<visible>Window.IsActive(seekbar)</visible>
			<include content="global_Notification">
