<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1105">
	<visible>Player.HasMedia + !Window.IsVisible(home) + !Window.IsVisible(screensaver) + !Window.IsVisible(startup) + !Window.IsVisible(visualisation) + !Window.IsVisible(notification) + !Window.IsVisible(extendedprogressdialog) + ![Window.IsVisible(DialogVolumeBar.xml) + !Player.Muted]</visible>
	<controls>

		<control type="group">
			<visible>!Window.IsVisible(fullscreenvideo)</visible>
			<include content="global_Notification" condition="String.IsEqual(Skin.String(view.list.art.Label),posters)">
				<param name="Left">1124</param>
				<param name="Height">108</param>
				<param name="Width">668</param>
				<param name="Symbol">$VAR[toast:Symbol]</param>
				<param name="Label">$VAR[toast:PlayingTitle]</param>
				<param name="Label2">$VAR[toast:PlayingInfo]</param>
			</include>
			<include content="global_Notification" condition="!String.IsEqual(Skin.String(view.list.art.Label),posters)">
				<param name="Left">1036</param>
				<param name="Height">108</param>
				<param name="Width">756</param>
				<param name="Symbol">$VAR[toast:Symbol]</param>
				<param name="Label">$VAR[toast:PlayingTitle]</param>
				<param name="Label2">$VAR[toast:PlayingInfo]</param>
			</include>
		</control>

		<!-- Fullscreen info -->
		<control type="group">
			<include>fadeinout</include>
			<visible>Window.IsVisible(seekbar) + !Window.IsActive(extendedprogressdialog) + !Window.IsActive(notification) + !Window.IsActive(volumebar)</visible>
			<control type="grouplist">
				<top>14</top>
				<right>148</right>
				<width>600</width>
				<height>54</height>
				<align>right</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<width>auto</width>
					<height>54</height>
					<align>right</align>
					<font>Regular-20</font>
					<label>$INFO[Player.Time]</label>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label">
					<width>32</width>
					<height>54</height>
					<align>center</align>
					<font>Regular-20</font>
					<label>/</label>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label">
					<width>auto</width>
					<height>54</height>
					<align>right</align>
					<font>Regular-20</font>
					<label>$INFO[Player.Duration]</label>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
			</control>
			<control type="label">
				<top>40</top>
				<right>148</right>
				<width>600</width>
				<height>54</height>
				<align>right</align>
				<font>Regular-20</font>
				<label>$INFO[Player.FinishTime,$LOCALIZE[31323] ]</label>
				<textcolor>$VAR[color:Accent]</textcolor>
			</control>
		</control>
	</controls>
</window>