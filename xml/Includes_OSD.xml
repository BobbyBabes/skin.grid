<includes>
	<include name="player_Control">
		<font>Symbols-26</font>
		<width>90</width>
		<align>center</align>
		<aligny>center</aligny>
		<textcolor>$VAR[color:Accent]</textcolor>
		<texturenofocus colordiffuse="$VAR[color:Main]">colorize/95.png</texturenofocus>
		<texturefocus colordiffuse="$VAR[color:Accent]">colorize/75.png</texturefocus>
	</include>

<!--player controls-->
	<include name="osd_menu">
		<param name="ID"/>
		<definition>
			<itemlayout width="540" height="90">
				<control type="image">
					<aspectratio>stretch</aspectratio>
					<width>540</width>
					<height>90</height>
					<texture colordiffuse="$VAR[color:Main]">colorize/75.png</texture>
				</control>
				<control type="image">
					<aspectratio>stretch</aspectratio>
					<width>90</width>
					<height>90</height>
					<texture colordiffuse="ff000000">colorize/15.png</texture>
				</control>
				<control type="label">
					<width>90</width>
					<height>90</height>
					<label>$INFO[ListItem.Label2]</label>
					<font>Symbols-32</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label">
					<left>114</left>
					<width>540</width>
					<height>90</height>
					<label>$INFO[ListItem.Label]</label>
					<font>Regular-20</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
			</itemlayout>
			<focusedlayout width="540" height="90">
				<control type="group">
					<visible>!Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<aspectratio>stretch</aspectratio>
						<width>540</width>
						<height>90</height>
						<texture colordiffuse="$VAR[color:Main]">colorize/75.png</texture>
					</control>
					<control type="image">
						<aspectratio>stretch</aspectratio>
						<width>90</width>
						<height>90</height>
						<texture colordiffuse="ff000000">colorize/15.png</texture>
					</control>
					<control type="label">
						<width>90</width>
						<height>90</height>
						<label>$INFO[ListItem.Label2]</label>
						<font>Symbols-32</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<left>114</left>
						<width>540</width>
						<height>90</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Regular-20</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
				</control>
				<control type="group">
					<visible>Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<aspectratio>stretch</aspectratio>
						<width>540</width>
						<height>90</height>
						<texture colordiffuse="$VAR[color:Accent]">colorize/75.png</texture>
					</control>
					<control type="label">
						<width>90</width>
						<height>90</height>
						<label>$INFO[ListItem.Label2]</label>
						<font>Symbols-32</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Main]</textcolor>
					</control>
					<control type="label">
						<left>114</left>
						<width>540</width>
						<height>90</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Regular-20</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Main]</textcolor>
					</control>
				</control>
			</focusedlayout>
		</definition>
	</include>

	<include name="player_OSD">
		<param name="Visible"/>
		<definition>
			<control type="group">
				<width>540</width>
				<height>630</height>
				<include>fadeinout</include>
				<visible>$PARAM[Visible]</visible>
				<control type="grouplist" id="700">
					<onup>630</onup>
					<ondown>601</ondown>
					<itemgap>0</itemgap>
					<onleft>700</onleft>
					<onright>700</onright>
					<onup>SetFocus(800,5)</onup>
					<ondown>SetFocus(800,0)</ondown>
					<orientation>horizontal</orientation>
					<!--channel down-->
					<control type="button" id="701">
						<label>&#58955;</label>
						<include>player_Control</include>
						<onclick>ChannelDown</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!--channel up-->
					<control type="button" id="702">
						<label>&#58952;</label>
						<include>player_Control</include>
						<onclick>ChannelUp</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!--previous-->
					<control type="button" id="703">
						<label>&#59171;</label>
						<include>player_Control</include>
						<onclick>PlayerControl(Previous)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!--rewind-->
					<control type="button" id="704">
						<label>&#59056;</label>
						<include>player_Control</include>
						<onclick>PlayerControl(Rewind)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<enable>Player.SeekEnabled</enable>
					</control>
					<!--pause-->
					<control type="togglebutton" id="705">
						<label>&#59054;</label>
						<altlabel>&#59053;</altlabel>
						<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
						<include>player_Control</include>
						<onclick>PlayerControl(Play)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<enable>Player.PauseEnabled</enable>
					</control>
					<!--stop-->
					<control type="button" id="706">
						<label>&#59051;</label>
						<include>player_Control</include>
						<onclick>PlayerControl(Stop)</onclick>
					</control>
					<!--forward-->
					<control type="button" id="707">
						<label>&#59055;</label>
						<include>player_Control</include>
						<onclick>PlayerControl(Forward)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<enable>Player.SeekEnabled</enable>
					</control>
					<!--next-->
					<control type="button" id="708">
						<label>&#59170;</label>
						<include>player_Control</include>
						<onclick>PlayerControl(Next)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!--record-->
					<control type="togglebutton" id="709">
						<label>&#59172;</label>
						<altlabel>&#59172;</altlabel>
						<usealttexture>Player.Recording</usealttexture>
						<include>player_Control</include>
						<onclick>PlayerControl(Record)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!--channels-->
					<control type="button" id="710">
						<label>&#59138;</label>
						<onclick>Dialog.Close(VideoOSD,true)</onclick>
						<onclick>ActivateWindow(PVROSDChannels)</onclick>
						<include>player_Control</include>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!--channels-->
					<control type="button" id="711">
						<label>&#58986;</label>
						<onclick>Dialog.Close(VideoOSD,true)</onclick>
						<include>player_Control</include>
						<onclick>ActivateWindow(teletext)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
				</control>
				<control type="list" id="800">
					<top>90</top>
					<width>540</width>
					<height>630</height>
					<onback>Skin.Reset(OSD)</onback>
					<onleft>Skin.Reset(OSD)</onleft>
					<onup>700</onup>
					<ondown>700</ondown>
					<orientation>vertical</orientation>
					<include content="osd_menu">
						<param name="ID">800</param>
					</include>
					<content>
						<!-- Playlist -->
						<item id="1">
							<label>$LOCALIZE[13350]</label>
							<label2>&#57392;</label2>
							<onclick>Close</onclick>
							<onclick>ActivateWindow(musicplaylist)</onclick>
							<visible>Player.HasAudio</visible>
							<visible>Integer.IsGreater(Playlist.Length(music),1)</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<!-- Visualisation -->
						<item id="1">
							<label>$LOCALIZE[250]</label>
							<label2>&#57463;</label2>
							<onclick>Skin.SetString(OSD,Viz)</onclick>
							<onclick>Control.SetFocus(800,1)</onclick>
							<visible>Player.HasAudio</visible>
							<visible allowhiddenfocus="true">String.IsEmpty(Skin.String(OSD,Viz))</visible>
						</item>
						<item id="2">
							<label>..</label>
							<label2>&#57424;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Viz)</visible>
						</item>
						<!-- Visualization select -->
						<item id="3">
							<label>$LOCALIZE[424]</label>
							<label2>&#57447;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(MusicOSD,true)</onclick>
							<onclick>Addon.Default.Set(xbmc.player.musicviz)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Viz)</visible>
						</item>
						<!-- Visualization presets -->	
						<item id="4">
							<label>$INFO[Visualisation.Name] $LOCALIZE[13388]</label>
							<label2>&#58957;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(MusicOSD,true)</onclick>
							<onclick>ActivateWindow(visualisationpresetlist)</onclick>
							<visible>Player.HasAudio</visible>
							<visible allowhiddenfocus="true">Skin.String(OSD,Viz)</visible>
						</item>
						<!-- Visualization settings -->	
						<item id="5">
							<label>$INFO[Visualisation.Name] $LOCALIZE[5]</label>
							<label2>&#59014;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(MusicOSD,true)</onclick>
							<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
							<visible>Player.HasAudio</visible>
							<visible allowhiddenfocus="true">Skin.String(OSD,Viz)</visible>
						</item>
						<!-- Lyrics -->	
						<item id="6">
							<label>$LOCALIZE[24013]</label>
							<label2>&#57388;</label2>
							<onclick condition="System.HasAddon(script.cu.lrclyrics)">Skin.SetString(OSD,Lyrics)</onclick>
							<onclick condition="System.HasAddon(script.cu.lrclyrics)">Control.SetFocus(800,1)</onclick>
							<onclick condition="!System.HasAddon(script.cu.lrclyrics)">Addon.Default.Set(xbmc.python.lyrics)</onclick>
							<visible>Player.HasAudio</visible>
							<visible allowhiddenfocus="true">String.IsEmpty(Skin.String(OSD,Lyrics))</visible>
						</item>
						<item id="7">
							<label>..</label>
							<label2>&#57424;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Lyrics)</visible>
						</item>
						<!-- Get Lyrics -->
						<item id="8">
							<label>$LOCALIZE[31322]</label>
							<label2>&#57475;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(MusicOSD,true)</onclick>
							<onclick>RunScript(script.cu.lrclyrics)</onclick>
							<visible>Player.HasAudio</visible>
							<visible allowhiddenfocus="true">Skin.String(OSD,Lyrics)</visible>
						</item>
						<!-- Lyrics settings -->
						<item id="9">
							<label>$LOCALIZE[24013] $LOCALIZE[5]</label>
							<label2>&#59014;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(MusicOSD,true)</onclick>
							<onclick>Addon.OpenSettings(script.cu.lrclyrics)</onclick>
							<visible>Player.HasAudio</visible>
							<visible allowhiddenfocus="true">Skin.String(OSD,Lyrics)</visible>
						</item>
						<!--random-->	
						<item id="20">
							<label>$LOCALIZE[13319]$INFO[Playlist.Random,: ]</label>
							<label2>&#57433;</label2>
							<onclick>PlayerControl(Random)</onclick>
							<visible>Player.HasAudio</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<!--repeat-->	
						<item id="21">
							<label>$LOCALIZE[486]$INFO[Playlist.Repeat,: ]</label>
							<label2>&#57444;</label2>
							<onclick>PlayerControl(Repeat)</onclick>
							<visible>Player.HasAudio</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<!--guide-->
						<item id="22">
							<label>$LOCALIZE[22020]$INFO[VideoPlayer.ChannelName, - ]</label>
							<label2>&#57361;</label2>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>ActivateWindow(PVROSDGuide)</onclick>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</item>
						<!--dvd menu-->
						<item id="23">
							<label>$LOCALIZE[33061]</label>
							<label2>&#59138;</label2>
							<onclick>PlayerControl(ShowVideoMenu)</onclick>
							<visible>VideoPlayer.HasMenu</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<!--subtitles-->
						<item id="30">
							<label>$LOCALIZE[287]</label>
							<label2>&#58947;</label2>
							<onclick>Skin.SetString(OSD,Subtitles)</onclick>
							<onclick>Control.SetFocus(800,1)</onclick>
							<visible>Player.HasVideo</visible>
							<visible>!VideoPlayer.Content(LiveTV)</visible>
							<visible allowhiddenfocus="true">String.IsEmpty(Skin.String(OSD,Subtitles))</visible>
						</item>
						<!--back-->
						<item id="31">
							<label>..</label>
							<label2>&#57424;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Subtitles)</visible>
						</item>
						<!--get subtitles-->
						<item id="32">
							<label>$LOCALIZE[31320]</label>
							<label2>&#57475;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>ActivateWindow(SubtitleSearch)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Subtitles)</visible>
						</item>
						<!--subtitle offset-->
						<item id="33">
							<label>$LOCALIZE[22006]</label>
							<label2>&#58968;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>SubtitleDelay</onclick>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Subtitles)</visible>
						</item>
						<!--toggle subtitles-->
						<item id="34">
							<label>$VAR[player:Subtitles]</label>
							<label2>$VAR[player:Subtitles2]</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>ShowSubtitles</onclick>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,Subtitles)</visible>
						</item>
						<!--3D-->
						<item id="40">
							<label>3D</label>
							<label2>&#57373;</label2>
							<onclick>Skin.SetString(OSD,3D)</onclick>
							<visible>Player.HasVideo</visible>
							<visible allowhiddenfocus="true">String.IsEmpty(Skin.String(OSD,3D))</visible>
							<enable>VideoPlayer.IsStereoscopic</enable>
						</item>
						<item id="41">
							<label>..</label>
							<label2>&#57424;</label2>
							<onclick>Skin.Reset(OSD)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,3D)</visible>
						</item>
						<item id="42">
							<label>$VAR[player:Toggle3D]</label>
							<label2>$VAR[player:Toggle3D2]</label2>
							<onclick>StereoModeToMono</onclick>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,3D)</visible>
						</item>
						<item id="43">
							<label>$LOCALIZE[31326]</label>
							<label2>&#57479;</label2>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>StereoMode</onclick>
							<visible allowhiddenfocus="true">Skin.String(OSD,3D)</visible>
						</item>
						<!--bookmarks-->
						<item>
							<label>$LOCALIZE[298]</label>
							<label2>&#57499;</label2>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>ActivateWindow(videobookmarks)</onclick>
							<visible>Player.HasVideo</visible>
							<visible>!VideoPlayer.Content(LiveTV)</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<!--video settngs-->
						<item>
							<label>$LOCALIZE[13395]</label>
							<label2>&#57352;</label2>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>ActivateWindow(osdvideosettings)</onclick>
							<visible>Player.HasVideo</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<!--audio settngs-->
						<item>
							<label>$LOCALIZE[13396]</label>
							<label2>&#57504;</label2>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>ActivateWindow(osdaudiosettings)</onclick>
							<visible>Player.HasVideo</visible>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
						<item>
							<label>$VAR[player:InfoToggle]</label>
							<label2>&#57483;</label2>
							<onclick>Dialog.Close(VideoOSD,true)</onclick>
							<onclick>Skin.Reset(OSD)</onclick>
							<onclick>SetFocus(43260)</onclick>
							<onclick>Action(Info)</onclick>
							<visible>String.IsEmpty(Skin.String(OSD))</visible>
						</item>
					</content>
				</control>
			</control>
		</definition>
	</include>

	<!--fullscreen info-->
	<include name="player_Info">
		<param name="Left" default="128"/>
		<param name="InfoWidth" default="1490"/>
		<param name="ArtWidth" default="174"/>
		<param name="ArtHeight" default="256"/>
		<param name="TextWidth" default="1426"/>
		<definition>
			<control type="group">
				<top>800</top>
				<width>1920</width>
				<height>285</height>
				<include>fadeinout</include>
				<control type="image">
					<top>98</top>
					<width>1920</width>
					<height>182</height>
					<texture colordiffuse="ff000000">colorize/40.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<left>64</left>
					<height>384</height>
					<bottom>64</bottom>
					<control type="image">
						<width>384</width>
						<height>384</height>
						<fadetime>fadetime_Thumb</fadetime>
						<texture>$VAR[player:ExtraArt]</texture>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
					</control>
					<control type="image">
						<top>384</top>
						<width>384</width>
						<height>384</height>
						<fadetime>fadetime_Thumb</fadetime>
						<texture flipy="true" diffuse="views/diffuse/portrait.png">$VAR[player:ExtraArt]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</control>
				<control type="group">
					<left>512</left>
					<control type="label">
						<label>$VAR[player:Info]</label>
						<width max="$PARAM[TextWidth]">auto</width>
						<height>64</height>
						<aligny>center</aligny>
						<font>Black-54</font>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<top>64</top>
						<label>$VAR[player:Info2]</label>
						<width max="$PARAM[TextWidth]">auto</width>
						<textoffsety>10</textoffsety>
						<height>26</height>
						<aligny>center</aligny>
						<font>Black-26</font>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="textbox">
						<top>120</top>
						<width>1344</width>
						<height>145</height>
						<label>$INFO[VideoPlayer.Plot]</label>
						<font>Slab-22</font>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
				</control>
			</control>
		</definition>
	</include>
</includes>