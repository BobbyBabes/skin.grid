<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<onload>SetProperty(ListLayout,Listview.MultiLine)</onload>
	<onunload>ClearProperty(ListLayout)</onunload>
	<menucontrol>7000</menucontrol>
	<controls>

	<!--menu trigger-->
		<control type="button" id="5500">
			<onfocus>Control.SetFocus(50)</onfocus>
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<include>global_Background</include>

	<!--global includes-->
		<control type="group">
			<include>transition_Chrome</include>
			<include>toggle_Menu</include>
			<include>global_Includes</include>
			<include content="global_WindowTitle">
				<param name="Label">$LOCALIZE[10503]</param>
			</include>

		<!--panes item counts-->
			<include content="global_Itemcount">
				<param name="Label" value="$INFO[Container(50).NumItems]"/>
				<param name="Visible" value="Control.HasFocus(50)"/>
			</include>
			<include content="global_Itemcount">
				<param name="Label" value="$INFO[Container(100).NumItems]"/>
				<param name="Visible" value="Control.HasFocus(100)"/>
			</include>
		</control>

	<!--content-->
		<control type="group">
			<left>128</left>
			<top>108</top>
			<include>transition_Content</include>

			<!--left pane-->
			<control type="group">
				<control type="label" id="101">
					<width>595</width>
					<label>$LOCALIZE[744]</label>
					<include>global_Header</include>
				</control>
				<include content="dialog_List">
					<param name="ID">50</param>
					<param name="Top">90</param>
					<param name="Width">638</param>
					<param name="Height">810</param>
					<param name="ItemHeight">90</param>
					<param name="OnLeft">noop</param>
					<param name="OnRight">100</param>
					<param name="OnUp">50</param>
					<param name="OnDown">50</param>
					<param name="Label">$VAR[info:TitleFallback]</param>
					<param name="Label2">$INFO[ListItem.Artist]</param>
					<param name="AnimationCondition">Control.HasFocus(100) | ControlGroup(9001).HasFocus()</param>
				</include>
			</control>

			<!--right pane-->
			<control type="group">
				<left>638</left>
				<control type="label" id="102">
					<width>595</width>
					<label>$LOCALIZE[559]</label>
					<include>global_Header</include>
				</control>
				<include content="dialog_List">
					<param name="ID">100</param>
					<param name="Top">90</param>
					<param name="Width">638</param>
					<param name="Height">810</param>
					<param name="ItemHeight">90</param>
					<param name="OnLeft">50</param>
					<param name="OnRight">9001</param>
					<param name="OnUp">100</param>
					<param name="OnDown">100</param>
					<param name="Label">$VAR[info:TitleFallback]</param>
					<param name="Label2">$INFO[ListItem.Artist]</param>
					<param name="AnimationCondition">Control.HasFocus(50) | ControlGroup(9001).HasFocus()</param>
				</include>
			</control>

			<!--dialog buttons-->
			<control type="grouplist" id="9001">
				<top>90</top>
				<right>128</right>
				<width>324</width>
				<height>108</height>
				<itemgap>0</itemgap>
				<onleft>100</onleft>
				<onright>noop</onright>
				<orientation>horizontal</orientation>
				<!--open-->
				<control type="button" id="18">
					<label>&#57502;</label>
					<include>button_Dialog</include>
				</control>
				<!---save-->
				<control type="button" id="7">
					<label>&#58930;</label>
					<include>button_Dialog</include>
				</control>
				<!--clear-->
				<control type="button" id="8">
					<label>&#58960;</label>
					<include>button_Dialog</include>
				</control>
			</control>
		</control>
	</controls>
</window>