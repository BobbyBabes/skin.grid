<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<controls>
		<include condition="!VideoPlayer.IsFullscreen | Window.IsActive(osdaudiodspsettings)">global_Background</include>

		<!-- Window chrome -->		
		<control type="group">
			<include>transition_Chrome</include>
			<include content="global_WindowChrome">
				<param name="Title">$VAR[window:Title.Dialog]</param>
			</include>
		</control>
		<control type="group">
			<top>198</top>
			<width>1920</width>
			<height>756</height>
			<visible>!Window.IsVisible(sliderdialog)</visible>
			<include>transition_Content</include>
		
			<!-- Control area -->
			<control type="group">
				<left>128</left>
				<control type="image">
					<width>1344</width>
					<height>810</height>
					<texture colordiffuse="$VAR[color:Main]">colorize/100.png</texture>
					<visible>VideoPlayer.IsFullscreen</visible>
				</control>

				<control type="grouplist" id="5">
					<width>1344</width>
					<height>810</height>
					<onup>5</onup>
					<ondown>5</ondown>
					<onright>9000</onright>
					<itemgap>0</itemgap>
				</control>

				<!-- Default button -->
				<control type="button" id="7">
					<width>1344</width>
					<height>90</height>
				</control>

				<!-- Default radiobutton -->
				<control type="radiobutton" id="8">
					<width>1344</width>
					<height>90</height>
				</control>

				<!-- Default spin -->
				<control type="spincontrolex" id="9">
					<width>1344</width>
					<height>90</height>
				</control>

				<!-- Default edit -->
				<control type="edit" id="12">
					<width>1344</width>
					<height>90</height>
				</control>

				<!-- Default slider -->
				<control type="edit" id="13">
					<width>1344</width>
					<height>90</height>
				</control>

				<!-- Default label -->
				<control type="label" id="14">
					<width>1344</width>
					<height>90</height>
					<include>global_Header</include>
				</control>
			</control>

			<!-- Dialog controls -->
			<control type="grouplist">
				<right>128</right>
				<width>216</width>
				<height>512</height>
				<itemgap>90</itemgap>
				<orientation>vertical</orientation>
				<control type="grouplist" id="9000">
					<width min="108" max="216">auto</width>
					<height>108</height>
					<onleft>5</onleft>
					<onright>noop</onright>
					<ondown>30</ondown>
					<align>right</align>
					<orientation>horizontal</orientation>
					<!-- Ok -->
					<control type="button" id="128">
						<label>&#58956;</label>
						<onclick>SendClick(28)</onclick>
						<visible>Control.IsVisible(28)</visible>
						<font>Symbols-26</font>
						<include>button_Dialog</include>
					</control>
					<!-- Cancel -->
					<control type="button" id="129">
						<label>&#58950;</label>
						<onclick>SendClick(29)</onclick>
						<visible>Control.IsVisible(29)</visible>
						<font>Symbols-26</font>
						<include>button_Dialog</include>
					</control>
				</control>
			</control>
		</control>
	
		<!-- Triggered dialog buttons -->
		<control type="button" id="28">
			<top>-5000</top>
			<label></label>
		</control>
		<control type="button" id="29">
			<top>-5000</top>
			<label></label>
		</control>
	</controls>
</window>