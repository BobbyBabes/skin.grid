<includes>

	<include name="home_Feed">

		<definition>
			<param name="Left" default="0"/>
			<param name="OnLeft" default="noop"/>
			<param name="OnRight" default="noop"/>
			<param name="OnUp" default="noop"/>
			<param name="OnDown" default="noop"/>
			<control type="grouplist" id="9100">
				<left>$PARAM[Left]</left>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<width>1920</width>
				<height>100%</height>

				<onup>$PARAM[OnUp]</onup>
				<ondown>$PARAM[OnDown]</ondown>
				<onleft>$PARAM[OnLeft]</onleft>
				<onright>$PARAM[OnRight]</onright>

				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">home_Menu-Horizontal</include>
				<include condition="String.IsEqual(Skin.String(homemenu.type),vertical)">skinshortcuts-template-widget_Regular</include>
				<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">skinshortcuts-template-widget_Mixed</include>
				<include condition="String.IsEqual(Skin.String(homemenu.type),stream)">skinshortcuts-template-widget_Stream</include>
				<animation type="Conditional" condition="ControlGroup(9100).HasFocus() + String.IsEqual(Skin.String(homemenu.type),vertical)">
					<effect type="slide" time="500" start="0"  end="-1920" tween="cubic" easing="InOut" center="auto" />
					<effect type="Fade" time="500" start="0" end="100" tween="cubic" easing="InOut"/>
				</animation>
			</control>
		</definition>

	</include>
	<include name="home_Vertical">

		<include content="background_Home">
			<param name="GridTexture">overlays/home.png</param>
			<param name="DiffuseColor">ff000000</param>
			<param name="DiffuseTexture">grid/home/vertical/diffuse.png</param>
		</include>


		<include>home_Menu-vertical</include>


		<!-- Feed container-->
		<include content="home_Feed">
			<param name="Left">1920</param>
			<param name="OnLeft">9000</param>

		</include>

	</include>


	<include name="home_Horizontal">
		<param name="Top" default="0"/>
		<param name="Left" default="0"/>
		<definition>
			<control type="group">
				<top>$PARAM[Top]</top>
				<left>$PARAM[Left]</left>
				<width>1920</width>

				<!-- Background_Slideshow-->
				<control type="multiimage">
					<timeperimage>30000</timeperimage>
					<fadetime>300</fadetime>
					<pauseatend>10000</pauseatend>
					<randomize>true</randomize>
					<include>screen_Dimensions</include>
					<include>Burns</include>
					<aspectratio>scale</aspectratio>
					<imagepath background="true">$VAR[background:Home]</imagepath>
					<visible>![Player.HasAudio + Skin.HasSetting(home.nowplaying)]</visible>
				</control>
				<!-- Image FX -->
				<control type="image">
					<bottom>0</bottom>
					<width>1920</width>
					<height>108</height>
					<texture>$INFO[Window(home).Property(ImageFilterFIVE)]</texture>
					<fadetime>300</fadetime>
					<aspectratio align="center" aligny="bottom">scale</aspectratio>
					<visible>System.HasAddon(script.colorbox) + [String.IsEqual(Skin.String(home.fx),blur) | String.IsEqual(Skin.String(home.fx),color)]</visible>
				</control>
				<control type="image">
					<include>screen_Dimensions</include>
					<texture>$INFO[Window(home).Property(ImageFilterFIVE)]</texture>
					<fadetime>300</fadetime>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<include>fadeinout</include>
					<visible>!Control.HasFocus(9000) + [String.IsEqual(Skin.String(home.fx),blur) | String.IsEqual(Skin.String(home.fx),color)]</visible>
				</control>
				<control type="image">
					<width>1920</width>
					<height>1080</height>
					<texture colordiffuse="$VAR[color:Main]">colorize/95.png</texture>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<include>fadeinout</include>
					<visible>!Control.HasFocus(9000) + !String.IsEqual(Skin.String(home.fx),blur) + !String.IsEqual(Skin.String(home.fx),color)]</visible>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>1920</width>
					<height>1080</height>
					<include>screen_Dimensions</include>
					<texture colordiffuse="ff000000">colorize/25.png</texture>
					<aspectratio align="center" aligny="bottom">scale</aspectratio>
				</control>
				<!-- Horizontal home window chrome -->
				<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">global_WindowChrome</include>

				<!-- Feed container-->
				<include content="home_Feed">
					<param name="Left">0</param>
				</include>

				<!-- Widget scroll indicators -->
				<control type="label">
					<right>10</right>
					<top>10</top>
					<width>128</width>
					<height>98</height>
					<label>&#58919;</label>
					<font>Symbols-32</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
					<include>fadeinout</include>
					<visible>!String.IsEqual(Skin.String(homemenu.type),vertical2)</visible>
					<visible>Container(9100).HasPrevious + IntegerGreaterThan(Container(9100).NumItems,1)</visible>
				</control>
				<control type="label">
					<right>10</right>
					<bottom>10</bottom>
					<width>128</width>
					<height>98</height>
					<label>&#58922;</label>
					<font>Symbols-32</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
					<include>fadeinout</include>
					<visible>!String.IsEqual(Skin.String(homemenu.type),vertical2)</visible>
					<visible>Container(9100).HasNext + IntegerGreaterThan(Container(9100).NumItems,1)</visible>
				</control>
			</control>
		</definition>
	</include>

	<include name="widget_Header">
		<param name="Visible"/>
		<param name="HasItems"/>
		<definition>
			<control type="grouplist" id="$PARAM[HeaderID]">
				<width>1920</width>
				<height>54</height>
				<orientation>horizontal</orientation>
				<visible>$PARAM[Visible]</visible>
				<visible>$PARAM[HasItems]</visible>
				<visible>Skin.HasSetting(widget.name)</visible>
				<control type="label" id="$PARAM[HeaderLabel]">
					<width>64</width>
					<label>&#58979;</label>
					<align>center</align>
					<font>Symbols-22</font>
					<height>54</height>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label" id="$PARAM[HeaderLabel]">
					<width>auto</width>
					<label>$PARAM[WidgetHeader]</label>
					<font>Regular-20</font>
					<height>54</height>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label" id="$PARAM[HeaderLabel2]">
					<width>auto</width>
					<label>$PARAM[WidgetHeader2]</label>
					<font>Regular-20</font>
					<height>54</height>
					<textcolor>$VAR[color:Accent]</textcolor>
					<include>fadeinout</include>
					<visible>Control.HasFocus($PARAM[ID])</visible>
				</control>
			</control>
		</definition>
	</include>

	<!-- Widget base layout -->
	<include name="widget_Layout">
		<param name="BigInfoFont" default="Black-54"/>
		<param name="BigInfoFont2" default="Black-26"/>
		<definition>
			<itemlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture>$PARAM[Art]</texture>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<bordersize>10</bordersize>
				</control>
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
					<bordersize>10</bordersize>
					<visible>$PARAM[Overlay]</visible>
				</control>

				<!-- Info -->
				<control type="group">
					<left>32</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[Info]</visible>
					<control type="label">
						<bottom>48</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-24</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>24</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Regular-20</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>

				<!-- Short info -->
				<control type="group">
					<bottom>10</bottom>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[ShortInfo]</visible>
					<control type="image">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<texture colordiffuse="$VAR[color:Text.2]">colorize/90.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label" id="66">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[widget:ShortLabel]</label>
						<textcolor>$VAR[color:Accent]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<font>Regular-18</font>
					</control>
				</control>

				<!-- Logo -->
				<control type="image">
					<bottom>20</bottom>
					<width>100%</width>
					<height>40%</height>
					<texture>$VAR[art:Logo]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
					<visible>$PARAM[Logo]</visible>
				</control>
			</itemlayout>
			<focusedlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="group">
					<visible>!Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
						<bordersize>10</bordersize>
						<visible>$PARAM[Overlay]</visible>
					</control>
				</control>
				<control type="group">
					<visible>Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordertexture>colorize/100.png</bordertexture>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
						<bordersize>10</bordersize>
						<visible>$PARAM[Overlay]</visible>
					</control>
				</control>

				<!-- Short info -->
				<control type="group">
					<bottom>10</bottom>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[ShortInfo]</visible>
					<control type="image">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<texture colordiffuse="$VAR[color:Text.2]">colorize/90.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label" id="66">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[widget:ShortLabel]</label>
						<textcolor>$VAR[color:Accent]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<font>Regular-18</font>
					</control>
				</control>

				<!--  Logo -->
				<control type="image">
					<bottom>20</bottom>
					<width>100%</width>
					<height>40%</height>
					<texture>$VAR[art:Logo]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
					<visible>$PARAM[Logo]</visible>
				</control>

				<!-- Info -->
				<control type="group">
					<left>32</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[Info]</visible>
					<control type="label">
						<bottom>48</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-24</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>24</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Regular-20</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>

				<!-- Big Info -->
				<control type="group">
					<left>64</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[BigInfo]</visible>
					<control type="label">
						<bottom>180</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>$PARAM[BigInfoFont]</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
						<animation effect="fade" end="40" time="200">Unfocus</animation>
					</control>
					<control type="label">
						<bottom>140</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>$PARAM[BigInfoFont2]</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
						<animation effect="fade" end="40" time="200">Unfocus</animation>
					</control>
					<control type="textbox">
						<bottom>48</bottom>
						<width>90%</width>
						<height>74</height>
						<label>$INFO[ListItem.Plot]</label>
						<font>Slab-24</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<animation effect="fade" end="40" time="200">Unfocus</animation>
						<visible>$PARAM[BigInfo]</visible>
					</control>
				</control>
			</focusedlayout>
		</definition>
	</include>
</includes>