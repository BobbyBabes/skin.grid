<includes>
	<include name="home_Feed">
		<param name="Top" default="0"/>
		<param name="Left" default="0"/>
		<definition>
			<control type="group">
				<top>$PARAM[Top]</top>
				<left>$PARAM[Left]</left>
				<width>1920</width>
				<animation type="Conditional" condition="ControlGroup(9100).HasFocus() + String.IsEqual(Skin.String(homemenu.type),vertical)">
					<effect type="slide" time="500" start="0"  end="-1920" tween="cubic" easing="InOut" center="auto" />
					<effect type="Fade" time="500" start="0" end="100" tween="cubic" easing="InOut"/>
				</animation>
				<control type="image">
					<width>100%</width>
					<height>screen_Height</height>
					<texture colordiffuse="ff000000">colorize/white.png</texture>
					<visible>!Player.HasMedia + Skin.HasSetting(background.video)</visible>
				</control>
				<control type="grouplist" id="9100">
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>
					<width>1920</width>
					<height>100%</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<include condition="String.IsEqual(Skin.String(homemenu.type),vertical)">skinshortcuts-template-widget_Regular</include>
					<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">skinshortcuts-template-widget_Mixed</include>
					<include condition="String.IsEqual(Skin.String(homemenu.type),stream)">skinshortcuts-template-widget_Stream</include>
				</control>
			</control>
		</definition>
	</include>

	<include name="widget_Layout">
		<param name="ID"/>
		<param name="ItemWidth"/>
		<param name="FrameWidth"/>
		<param name="FrameHeight" default="187"/>
		<param name="Height"/>
		<param name="Art"/>
		<param name="ShowLogo"/>
		<param name="ShowInfo"/>
		<param name="Title"/>
		<param name="Info"/>
		<param name="Description"/>
		<param name="TitleFont"/>
		<param name="InfoFont"/>
		<param name="InfoLeft" default="128"/>
		<param name="PlotWidth" default="1664"/>
		<param name="PlotHeight"/>
		<param name="InfoTop"/>
		<param name="ExtraArtSize"/>
		<definition>
			<itemlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture>$PARAM[Art]</texture>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<bordersize>10</bordersize>
				</control>
			</itemlayout>
			<focusedlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="group">
					<width>$PARAM[ItemWidth]</width>
					<visible>Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordertexture>colorize/100.png</bordertexture>
						<bordersize>10</bordersize>
					</control>
					<control type="group">
						<top>$PARAM[InfoTop]</top>
						<width>$PARAM[ItemWidth]</width>
						<height>285</height>
						<visible>$PARAM[ShowInfo]</visible>
						<control type="image">
							<left>10</left>>
							<top>98</top>
							<width>$PARAM[FrameWidth]</width>
							<height>$PARAM[FrameHeight]</height>
							<texture colordiffuse="ff000000">colorize/40.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="group">
							<left>$PARAM[InfoLeft]</left>
							<control type="label">
								<label>$PARAM[Title]</label>
								<width max="$PARAM[TextWidth]">auto</width>
								<height>64</height>
								<aligny>center</aligny>
								<font>Black-64</font>
								<textcolor>$VAR[color:Accent]</textcolor>
							</control>
							<control type="label">
								<top>64</top>
								<label>$PARAM[Info]</label>
								<width max="$PARAM[TextWidth]">auto</width>
								<textoffsety>10</textoffsety>
								<height>26</height>
								<aligny>center</aligny>
								<font>Black-26</font>
								<textcolor>$VAR[color:Accent]</textcolor>
							</control>
							<control type="textbox">
								<top>120</top>
								<width>$PARAM[InfoWidth]</width>
								<height>$PARAM[PlotHeight]</height>
								<label>$INFO[ListItem.Plot]</label>
								<font>Slab-22</font>
								<textcolor>$VAR[color:Accent]</textcolor>
								<visible>String.IsEmpty(ListItem.Art(tvshow.characterart))</visible>
							</control>
							<control type="textbox">
								<top>120</top>
								<width>$PARAM[PlotWidth]</width>
								<height>$PARAM[PlotHeight]</height>
								<label>$INFO[ListItem.Plot]</label>
								<font>Slab-22</font>
								<textcolor>$VAR[color:Accent]</textcolor>
								<visible>!String.IsEmpty(ListItem.Art(tvshow.characterart))</visible>
							</control>
						</control>
						<control type="image">
							<right>10</right>
							<bottom>10</bottom>
							<width>$PARAM[ExtraArtSize]</width>
							<height>$PARAM[ExtraArtSize]</height>
							<texture>$INFO[ListItem.Art(tvshow.characterart)]</texture>
							<aspectratio align="right" aligny="bottom">keep</aspectratio>
						</control>
					</control>
				</control>
				<control type="group">
					<visible>!Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordersize>10</bordersize>
					</control>
					<control type="group">
						<top>$PARAM[InfoTop]</top>
						<width>$PARAM[Width]</width>
						<height>285</height>
						<visible>$PARAM[ShowInfo]</visible>
						<animation type="Conditional" condition="!Control.HasFocus($PARAM[ID])">
							<effect type="Fade" time="500" start="100" end="25" tween="cubic" easing="InOut"/>
						</animation>
						<control type="image">
							<left>10</left>>
							<top>98</top>
							<width>$PARAM[FrameWidth]</width>
							<height>187</height>
							<texture colordiffuse="ff000000">colorize/40.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="group">
							<left>$PARAM[InfoLeft]</left>
							<control type="label">
								<label>$PARAM[Title]</label>
								<width max="$PARAM[TextWidth]">auto</width>
								<height>64</height>
								<aligny>center</aligny>
								<font>Black-64</font>
								<textcolor>$VAR[color:Accent]</textcolor>
							</control>
							<control type="label">
								<top>64</top>
								<label>$PARAM[Info]</label>
								<width max="$PARAM[TextWidth]">auto</width>
								<textoffsety>10</textoffsety>
								<height>26</height>
								<aligny>center</aligny>
								<font>Black-26</font>
								<textcolor>$VAR[color:Accent]</textcolor>
							</control>
							<control type="textbox">
								<top>120</top>
								<width>$PARAM[InfoWidth]</width>
								<height>$PARAM[PlotHeight]</height>
								<label>$INFO[ListItem.Plot]</label>
								<font>Slab-22</font>
								<textcolor>$VAR[color:Accent]</textcolor>
								<visible>String.IsEmpty(ListItem.Art(tvshow.characterart))</visible>
							</control>
							<control type="textbox">
								<top>120</top>
								<width>$PARAM[PlotWidth]</width>
								<height>$PARAM[PlotHeight]</height>
								<label>$INFO[ListItem.Plot]</label>
								<font>Slab-22</font>
								<textcolor>$VAR[color:Accent]</textcolor>
								<visible>!String.IsEmpty(ListItem.Art(tvshow.characterart))</visible>
							</control>
						</control>
						<control type="image">
							<right>10</right>
							<bottom>10</bottom>
							<width>$PARAM[ExtraArtSize]</width>
							<height>$PARAM[ExtraArtSize]</height>
							<texture>$INFO[ListItem.Art(tvshow.characterart)]</texture>
							<aspectratio align="right" aligny="bottom">keep</aspectratio>
						</control>
					</control>
				</control>
			</focusedlayout>
		</definition>
	</include>
</includes>