<includes>
	<include name="home_Feed">
		<param name="Top" default="0"/>
		<param name="Left" default="0"/>
		<definition>
			<control type="group">
				<top>$PARAM[Top]</top>
				<left>$PARAM[Left]</left>
				<width>1920</width>

				<animation type="Conditional" condition="ControlGroup(9100).HasFocus() + String.IsEqual(Skin.String(homemenu.type),vertical)">
					<effect type="slide" time="500" start="0"  end="-1920" tween="cubic" easing="InOut" center="auto" />
					<effect type="Fade" time="500" start="0" end="100" tween="cubic" easing="InOut"/>
				</animation>
				<control type="image">
					<width>100%</width>
					<height>screen_Height</height>
					<texture colordiffuse="ff000000">colorize/white.png</texture>
					<visible>![Player.HasMedia + Skin.HasSetting(background.video)]</visible>
				</control>
				<control type="grouplist" id="9100">
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>
					<width>1920</width>
					<height>100%</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<include condition="String.IsEqual(Skin.String(homemenu.type),vertical)">skinshortcuts-template-widget_Regular</include>
					<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">skinshortcuts-template-widget_Mixed</include>
					<include condition="String.IsEqual(Skin.String(homemenu.type),stream)">skinshortcuts-template-widget_Stream</include>
				</control>
			</control>
		</definition>
	</include>

	<variable name="widget:Label">
		<value condition="!String.IsEmpty(ListItem.TVShowTitle)">$INFO[ListItem.TVShowTitle]</value>	
		<value>$INFO[ListItem.Label]</value>
	</variable>
	<variable name="widget:Label2">
		<value condition="!String.IsEmpty(ListItem.TVShowTitle)">$INFO[ListItem.Season,$LOCALIZE[20373] ]$INFO[ListItem.Episode, - $LOCALIZE[20359] ]$INFO[ListItem.Premiered,&#32;&#32;|&#32;&#32;]</value>
		<value condition="String.IsEqual(ListItem.DBTYPE,movie)">$INFO[ListItem.Year]$INFO[ListItem.Duration,&#32;&#32;|&#32;&#32;, $LOCALIZE[31075]]$INFO[ListItem.Genre,&#32;&#32;|&#32;&#32;]</value>
		<value>$INFO[ListItem.Label]</value>
	</variable>
	<variable name="widget:Descriptiom">
		<value>$INFO[ListItem.Plot]</value>
	</variable>

	<include name="widget_Layout">
		<definition>
			<itemlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture>$PARAM[Art]</texture>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<bordersize>10</bordersize>
				</control>
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
					<bordersize>10</bordersize>
					<visible>$PARAM[Info]</visible>
				</control>
				<control type="group">
					<left>32</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[Info]</visible>
					<control type="label">
						<bottom>48</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-24</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>24</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Regular-20</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>
			</itemlayout>
			<focusedlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="group">
					<visible>!Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
						<bordersize>10</bordersize>
						<visible>$PARAM[Overlay]</visible>
					</control>
				</control>
				<control type="group">
					<visible>Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordertexture>colorize/100.png</bordertexture>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
						<bordersize>10</bordersize>
						<visible>$PARAM[Overlay]</visible>
					</control>
				</control>
				<control type="group">
					<left>32</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[Info]</visible>
					<control type="label">
						<bottom>48</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-24</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>24</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Regular-20</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>
				<control type="group">
					<left>64</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[BigInfo]</visible>
					<control type="label">
						<bottom>180</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-64</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>140</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Black-26</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>
				<control type="textbox">
					<left>64</left>
					<bottom>48</bottom>
					<width>90%</width>
					<height>74</height>
					<label>$INFO[ListItem.Plot]</label>
					<font>Slab-24</font>
					<textcolor>$VAR[color:Accent]</textcolor>
					<visible>$PARAM[BigInfo]</visible>
				</control>
			</focusedlayout>
		</definition>
	</include>
</includes>