<includes>
	<include name="home_Feed">
		<param name="Top" default="0"/>
		<param name="Left" default="0"/>
		<definition>
			<control type="group">
				<top>$PARAM[Top]</top>
				<left>$PARAM[Left]</left>
				<width>1920</width>

				<!-- Slide in feed for vertical menu -->
				<animation type="Conditional" condition="ControlGroup(9100).HasFocus() + String.IsEqual(Skin.String(homemenu.type),vertical)">
					<effect type="slide" time="500" start="0"  end="-1920" tween="cubic" easing="InOut" center="auto" />
					<effect type="Fade" time="500" start="0" end="100" tween="cubic" easing="InOut"/>
				</animation>

				<!-- Solid background -->
				<control type="image">
					<width>100%</width>
					<height>screen_Height</height>
					<texture colordiffuse="ff000000">colorize/white.png</texture>
					<visible>![Player.HasMedia + Skin.HasSetting(background.video)]</visible>
				</control>

				<!-- Feed container-->
				<control type="grouplist" id="9100">
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>
					<width>1920</width>
					<height>100%</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<include condition="String.IsEqual(Skin.String(homemenu.type),vertical)">skinshortcuts-template-widget_Regular</include>
					<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">skinshortcuts-template-widget_Mixed</include>
					<include condition="String.IsEqual(Skin.String(homemenu.type),stream)">skinshortcuts-template-widget_Stream</include>
				</control>

				<!-- Widget scroll indicators -->
				<control type="label">
					<right>10</right>
					<top>10</top>
					<width>128</width>
					<height>98</height>
					<label>&#58919;</label>
					<font>Symbols-32</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
					<include>fadeinout</include>
					<visible>Container(9100).HasPrevious + IntegerGreaterThan(Container(9100).NumItems,1)</visible>
				</control>
				<control type="label">
					<right>10</right>
					<bottom>10</bottom>
					<width>128</width>
					<height>98</height>
					<label>&#58922;</label>
					<font>Symbols-32</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
					<include>fadeinout</include>
					<visible>Container(9100).HasNext + IntegerGreaterThan(Container(9100).NumItems,1)</visible>
				</control>
			</control>
		</definition>
	</include>

	<include name="widget_Header">
		<definition>
			<control type="group" id="$PARAM[HeaderID]">
				<width>1920</width>
				<height>54</height>
				<visible>Skin.HasSetting(widget.name)</visible>
				<control type="label" id="$PARAM[HeaderLabel]">
					<width>1920</width>
					<textoffsetx>24</textoffsetx>
					<label>$PARAM[WidgetHeader]</label>
					<font>Regular-18</font>
					<height>54</height>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label" id="$PARAM[HeaderLabel2]">
					<right>0</right>
					<width>1920</width>
					<textoffsetx>24</textoffsetx>
					<label>$PARAM[WidgetName]</label>
					<font>Regular-18</font>
					<height>54</height>
					<align>right</align>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
			</control>
		</definition>
	</include>

	<!-- Widget base layout -->
	<include name="widget_Layout">
		<param name="BigInfoFont" default="Black-54"/>
		<param name="BigInfoFont2" default="Black-26"/>
		<definition>
			<itemlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture>$PARAM[Art]</texture>
					<aspectratio align="center" aligny="top">scale</aspectratio>
					<bordersize>10</bordersize>
				</control>
				<control type="image">
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
					<bordersize>10</bordersize>
					<visible>$PARAM[Overlay]</visible>
				</control>

				<!-- Info -->
				<control type="group">
					<left>32</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[Info]</visible>
					<control type="label">
						<bottom>48</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-24</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>24</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Regular-20</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>

				<!-- Short info -->
				<control type="group">
					<bottom>10</bottom>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[ShortInfo]</visible>
					<control type="image">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<texture colordiffuse="$VAR[color:Text.2]">colorize/90.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label" id="66">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[widget:ShortLabel]</label>
						<textcolor>$VAR[color:Accent]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<font>Regular-18</font>
					</control>
				</control>

				<!-- Logo -->
				<control type="image">
					<bottom>20</bottom>
					<width>100%</width>
					<height>40%</height>
					<texture>$VAR[art:Logo]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
					<visible>$PARAM[Logo]</visible>
				</control>
			</itemlayout>
			<focusedlayout width="$PARAM[ItemWidth]" height="$PARAM[Height]">
				<control type="group">
					<visible>!Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
						<bordersize>10</bordersize>
						<visible>$PARAM[Overlay]</visible>
					</control>
				</control>
				<control type="group">
					<visible>Control.HasFocus($PARAM[ID])</visible>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="top">scale</aspectratio>
						<bordertexture>colorize/100.png</bordertexture>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[Height]</height>
						<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
						<bordersize>10</bordersize>
						<visible>$PARAM[Overlay]</visible>
					</control>
				</control>

				<!-- Short info -->
				<control type="group">
					<bottom>10</bottom>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[ShortInfo]</visible>
					<control type="image">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<texture colordiffuse="$VAR[color:Text.2]">colorize/100.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label" id="66">
						<top>20</top>
						<right>10</right>
						<width>80</width>
						<height>54</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[widget:ShortLabel]</label>
						<textcolor>$VAR[color:Accent]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<font>Regular-18</font>
					</control>
				</control>

				<!--  Logo -->
				<control type="image">
					<bottom>20</bottom>
					<width>100%</width>
					<height>40%</height>
					<texture>$VAR[art:Logo]</texture>
					<aspectratio align="center" aligny="bottom">keep</aspectratio>
					<visible>$PARAM[Logo]</visible>
				</control>

				<!-- Info -->
				<control type="group">
					<left>32</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[Info]</visible>
					<control type="label">
						<bottom>48</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>Black-24</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>24</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>Regular-20</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>

				<!-- Big Info -->
				<control type="group">
					<left>64</left>
					<width>$PARAM[ItemWidth]</width>
					<height>$PARAM[Height]</height>
					<visible>$PARAM[BigInfo]</visible>
					<control type="label">
						<bottom>180</bottom>
						<label>$VAR[widget:Label]</label>
						<width>$PARAM[TextWidth]</width>
						<height>28</height>
						<font>$PARAM[BigInfoFont]</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<bottom>140</bottom>
						<height>24</height>
						<width>$PARAM[TextWidth]</width>
						<label>$VAR[widget:Label2]</label>
						<font>$PARAM[BigInfoFont2]</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
				</control>
				<control type="textbox">
					<left>64</left>
					<bottom>48</bottom>
					<width>90%</width>
					<height>74</height>
					<label>$INFO[ListItem.Plot]</label>
					<font>Slab-24</font>
					<textcolor>$VAR[color:Accent]</textcolor>
					<visible>$PARAM[BigInfo]</visible>
				</control>
			</focusedlayout>
		</definition>
	</include>
</includes>