<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="view_Gallery">
		<param name="ID" default="53"/>
		<param name="Top" default="0"/>
		<param name="Left" default="0"/>
		<param name="Width" default="screen_Width"/>
		<param name="Height" default="screen_Height"/>
		<param name="ArtWidth" default="screen_Width"/>
		<param name="ArtHeight" default="screen_Height"/>
		<param name="ItemWidth" default="screen_Width"/>
		<param name="ItemHeight" default="screen_Height"/>
		<param name="LabelWidth"/>
		<param name="LabelHeight"/>
		<param name="TextHeight"/>
		<param name="TextWidth"/>
		<param name="SymbolSize"/>
		<param name="PageControl" default="6500"/>
		<param name="Symbol" default="Symbols-32"/>
		<param name="Icon" default="$VAR[symbol:Global]"/>
		<param name="Art" default="$VAR[art:Landscape]"/>
		<param name="Label" default="$VAR[media:Title]"/>
		<param name="Label2" default="$VAR[media:Info]"/>
		<param name="Description" default="$VAR[media:Description]"/>
		<param name="Visible" default="Container.Content(movies) | Container.Content(tvshows) | Container.Content(sets) | Container.Content(actors)"/>
		<definition>
			<control type="wraplist" id="$PARAM[ID]">
				<viewtype label="Gallery">bigwrap</viewtype>
				<left>$PARAM[Left]</left>
				<top>$PARAM[Top]</top>
				<width>$PARAM[Width]</width>
				<height>$PARAM[Height]</height>
				<onup>SetProperty(MenuOpen,true,Home)</onup>
				<onup>7000</onup>
				<onleft>$PARAM[ID]</onleft>
				<onright>$PARAM[ID]</onright>
				<ondown condition="Integer.IsGreater(Container($PARAM[ID]).NumPages,1)">$PARAM[PageControl]</ondown>
				<focusposition>0</focusposition>
				<pagecontrol>$PARAM[PageControl]</pagecontrol>
				<orientation>horizontal</orientation>
				<include>global_Scrolltime</include>
				<visible>$PARAM[Visible]</visible>
				<itemlayout width="$PARAM[ItemWidth]" height="$PARAM[ItemHeight]">
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[ItemHeight]</height>
						<texture>views/fallback/video-fanart.jpg</texture>
						<aspectratio>stretch</aspectratio>
						<visible>ListItem.IsParentFolder</visible>
					</control>
					<control type="image">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="center">scale</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="$PARAM[ItemWidth]" height="$PARAM[ItemHeight]">
					<control type="image">
						<width>$PARAM[ItemWidth]</width>
						<height>$PARAM[ItemHeight]</height>
						<texture>views/fallback/movie.png</texture>
						<aspectratio>stretch</aspectratio>
						<visible>ListItem.IsParentFolder</visible>
					</control>
					<control type="image">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<texture>$PARAM[Art]</texture>
						<aspectratio align="center" aligny="center">scale</aspectratio>
					</control>
				</focusedlayout>
			</control>
		</definition>
	</include>

	<include name="info_Gallery">
		<param name="ID"/>
		<param name="ItemWidth"/>
		<param name="Height"/>
		<param name="Art"/>
		<param name="ShowLogo"/>
		<param name="ShowInfo"/>
		<param name="Title"/>
		<param name="Info"/>
		<param name="Description"/>
		<param name="TitleFont"/>
		<param name="InfoFont"/>
		<param name="PlotHeight"/>
		<param name="InfoTop"/>
		<definition>
			<control type="group">
				<top>784</top>
				<width>1920</width>
				<height>285</height>
				<control type="image">
					<top>98</top>
					<width>1920</width>
					<height>197</height>
					<texture colordiffuse="ff000000">colorize/40.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<left>128</left>
					<height>384</height>
					<bottom>32</bottom>
					<control type="group">
						<visible>String.IsEmpty(ListItem.Art(thumb))</visible>
						<control type="image">
							<width>277</width>
							<height>384</height>
							<fadetime>fadetime_Thumb</fadetime>
							<texture colordiffuse="$VAR[color:Text.2]">views/fallback/portrait.png</texture>
							<aspectratio align="center" aligny="bottom">scale</aspectratio>
							<visible>String.IsEmpty(ListItem.Art(thumb))</visible>
						</control>
						<control type="image">
							<width>277</width>
							<height>384</height>
							<fadetime>fadetime_Thumb</fadetime>
							<texture colordiffuse="$VAR[color:Text.2]">views/fallback/portrait.png</texture>
							<aspectratio align="center" aligny="bottom">stretch</aspectratio>
						</control>
						<control type="label">
							<label>$VAR[symbol:Global]</label>
							<width>300</width>
							<height>384</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>Symbols-46</font>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
					</control>
					<control type="image">
						<width>300</width>
						<height>384</height>
						<fadetime>fadetime_Thumb</fadetime>
						<texture>$INFO[ListItem.Art(poster)]</texture>
						<aspectratio align="left" aligny="bottom">keep</aspectratio>
					</control>
					<control type="image">
						<top>384</top>
						<width>300</width>
						<height>384</height>
						<fadetime>fadetime_Thumb</fadetime>
						<texture flipy="true" diffuse="views/diffuse/portrait.png">$INFO[ListItem.Art(poster)]</texture>
						<aspectratio align="left" aligny="top">keep</aspectratio>
					</control>
				</control>
				<control type="group">
					<left>448</left>
					<control type="label">
						<label>$VAR[media:Title]</label>
						<width max="$PARAM[TextWidth]">auto</width>
						<height>64</height>
						<aligny>center</aligny>
						<font>Black-54</font>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="label">
						<top>64</top>
						<label>$VAR[media:Info]</label>
						<width max="$PARAM[TextWidth]">auto</width>
						<textoffsety>10</textoffsety>
						<height>26</height>
						<aligny>center</aligny>
						<font>Black-26</font>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
					<control type="textbox">
						<top>120</top>
						<width>1344</width>
						<height>145</height>
						<label>$INFO[ListItem.Plot]</label>
						<font>Slab-22</font>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
				</control>
			</control>
		</definition>
	</include>
</includes>