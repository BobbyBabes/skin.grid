<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>7000</menucontrol>
	<views>50,51,52,55,56</views>
	<controls>

	<!-- Menu trigger -->
		<control type="button" id="5500">
			<onfocus>Control.SetFocus(50)</onfocus>
			<visible allowhiddenfocus="true">false</visible>
		</control>

	<!-- Background -->
		<include content="global_Background">
			<param name="GridTexture">$VAR[window:Grid]</param>
		</include>

		<control type="group">
			
			<include>toggle_Menu</include>

		<!-- Window chrome -->
			<control type="group">
				<include>transition_Chrome</include>
				<include>global_Includes</include>
				<include>global_WindowChrome</include>
			</control>

				
		<!-- View includes -->
			<control type="group">
				<include>transition_Content</include>
				

				<!-- List -->
				<control type="group">
					<visible>Control.IsVisible(50)</visible>
					<include>transition_ViewChange</include>
					<include>view_List</include>
					<include content="info_List">
						<param name="Visible">Container.Content(artists)</param>
					</include>
					<include content="info_List">
						<param name="Visible">Container.Content(albums) | Container.Content(songs)</param>
						<param name="Width" value="756"/>
						<param name="Art" value="$VAR[art:Square]"/>
						<param name="ArtHeight" value="756"/>
						<param name="ShowDescription" value="true"/>
						<param name="DiffuseTexture">views/diffuse/kodi_landscape.png</param>
					</include>
				</control>

				<!-- Big List -->
				<control type="group">
					<visible>Control.IsVisible(51)</visible>
					<include>transition_ViewChange</include>
					<include content="view_BigList">
						<param name="Visible">Container.Content(artists)</param>
					</include>
				</control>

				<!-- Slide -->
				<control type="group">
					<visible>Control.IsVisible(52)</visible>
					<include>transition_ViewChange</include>
					<include content="view_Slide">
						<param name="Top">108</param>
						<param name="InfoTop">776</param>
						<param name="ArtWidth">648"</param>
						<param name="ArtHeight">648"</param>
						<param name="ItemWidth">648"</param>
						<param name="ItemHeight">648"</param>
						<param name="ArtFallback">views/fallback/landscape.png</param>
					</include>
				</control>

				<control type="group">
					<visible>Control.IsVisible(55)</visible>
					<include>transition_ViewChange</include>
					<include content="view_Thumbnails">
						<param name="ID" value="55"/>
						<param name="Label2" value="$VAR[media:Info]"/>
						<param name="Views.ShowLogo" value="$EXP[Views.ShowLogo]"/>
						<param name="ShowInfo" value="$EXP[Thumbview.ShowInfo]"/>
						<param name="Fallback" value="views/fallback/landscape.png"/>
						<param name="Visible">Container.Content(artists)</param>
					</include>
				</control>

				<control type="group">
					<visible>Control.IsVisible(56)</visible>
					<include>transition_ViewChange</include>
					<include content="view_Thumbnails">
						<param name="ID" value="56"/>
						<param name="Label2" value="$VAR[media:Info]"/>
						<param name="Art" value="$VAR[art:Square]"/>
						<param name="ArtWidth" value="416"/>
						<param name="ArtHeight" value="416"/>
						<param name="ItemWidth" value="416"/>
						<param name="ItemHeight" value="416"/>
						<param name="TextWidth" value="352"/>
						<param name="Visible">Container.Content(albums) | Container.Content(songs)</param>
						<param name="Fallback" value="views/fallback/square.png"/>
						<param name="ShowFallback">ListItem.IsParentFolder | String.IsEmpty(ListItem.Art(thumb))</param>
					</include>
				</control>

			</control>

		<!-- Scrollbar-->
			<include>global_Scrollbar</include>
		
		</control>

	<!-- Menu -->
		<include>menu_Options</include>

	</controls>
</window>