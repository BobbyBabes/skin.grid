<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="view_Thumbnails">
		<param name="ID" default="55"/>
		<param name="ViewTypeLabel" default="$LOCALIZE[31102]"/>
		<param name="Top" default="108"/>
		<param name="Left" default="128"/>
		<param name="OnRight" default="6500"/>
		<param name="PageControl" default="6500"/>
		<param name="Orientation" default="vertical"/>
		<param name="Width" default="1664"/>
		<param name="Height" default="972"/>
		<param name="ArtWidth" default="554.6"/>
		<param name="ArtHeight" default="321"/>
		<param name="ItemWidth" default="554.6"/>
		<param name="ItemHeight" default="321"/>
		<param name="Frame" default="views/frame/square.png"/>
		<param name="TextLeft" default="32"/>
		<param name="TextWidth" default="490"/><!--ArtWidth - 48-->
		<param name="TextHeight" default="228"/><!--Artheight - 84-->
		<param name="Label" default="$VAR[media:Title]"/>
		<param name="Label2" default="$VAR[media:Info]"/>
		<param name="ShowInfo" default="true"/>
		<param name="Art" default="$VAR[art:Landscape]"/>
		<param name="AspectRatio" default="scale"/>
		<param name="AspectRatioAlign" default="center"/>
		<param name="AspectRatioAlignY" default="top"/>
		<param name="Fallback" default="views/fallback/landscape.png"/>
		<param name="ShowFallback" default="ListItem.IsParentFolder | [String.IsEmpty(ListItem.Art(fanart)) + !Container.Content(images)]"/>
		<param name="Logo" default="$VAR[art:Logo]"/>
		<param name="ShowLogo" default="$EXP[Views.ShowLogo]"/>
		<param name="Symbol" default="$VAR[symbol:Global]"/>
		<param name="SymbolFont" default="Symbols-64"/>
		<param name="ShowOverlay" default="true"/>
		<param name="Visible"/>
		<definition>
			<control type="panel" id="$PARAM[ID]">
				<viewtype label="$PARAM[ViewTypeLabel]">icon</viewtype>
				<left>$PARAM[Left]</left>
				<top>$PARAM[Top]</top>
				<width>$PARAM[Width]</width>
				<height>$PARAM[Height]</height>
				<onup>$PARAM[ID]</onup>
				<ondown>$PARAM[ID]</ondown>
				<onleft>7000</onleft>
				<onleft>SetProperty(MenuOpen,true,Home)</onleft>
				<onright condition="Window.IsActive(bookmarks)">9000</onright>
				<onright condition="!Window.IsActive(bookmarks)">6500</onright>
				<orientation>$PARAM[Orientation]</orientation>
				<pagecontrol>$PARAM[PageControl]</pagecontrol>
				<preloaditems>4</preloaditems>
				<include>global_ListScroll</include>
				<visible>$PARAM[Visible]</visible>
				<itemlayout width="$PARAM[ItemWidth]" height="$PARAM[ItemHeight]">
					<control type="group">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<control type="image">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<texture colordiffuse="$VAR[color:Text.2]">$PARAM[Fallback]</texture>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<bordersize>10</bordersize>
							<visible>$PARAM[ShowFallback]</visible>
						</control>
						<control type="label">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<label>$PARAM[Symbol]</label>
							<font>$PARAM[SymbolFont]</font>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
							<visible>ListItem.IsParentFolder</visible>
						</control>
						<control type="image">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<texture>$PARAM[Art]</texture>
							<aspectratio align="$PARAM[AspectRatioAlign]" aligny="$PARAM[AspectRatioAlignY]">$PARAM[AspectRatio]</aspectratio>
							<bordersize>10</bordersize>
						</control>
						<control type="image">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
							<bordersize>10</bordersize>
							<aspectratio>stretch</aspectratio>
							<animation effect="fade" start="0" end="100" time="150">Focus</animation>
							<animation effect="fade" start="100" end="0" time="150">UnFocus</animation>
							<visible>!ListItem.IsParentFolder + ![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(thumb))]</visible>
							<visible>$PARAM[ShowOverlay]</visible>
						</control>
						<control type="image">
							<bottom>24</bottom>
							<width>100%</width>
							<height>30%</height>
							<texture>$PARAM[Logo]</texture>
							<aspectratio align="center" aligny="bottom">keep</aspectratio>
							<visible>!Container.Content(episodes)</visible>
							<visible>$PARAM[ShowLogo]</visible>
						</control>
						<control type="image">
							<left>24</left>
							<top>24</top>
							<width>100%</width>
							<height>30%</height>
							<texture>$PARAM[Logo]</texture>
							<aspectratio align="left" aligny="bottom">keep</aspectratio>
							<visible>Container.Content(episodes)</visible>
							<visible>$PARAM[ShowLogo]</visible>
						</control>
					</control>
					<!--info-->
					<control type="group">
						<bottom>48</bottom>
						<left>$PARAM[TextLeft]</left>
						<width>$PARAM[TextWidth]</width>
						<height>24</height>
						<visible>$PARAM[ShowInfo]</visible>
						<control type="textbox">
							<width>$PARAM[TextWidth]</width>
							<label>$PARAM[Label]</label>
							<height>60</height>
							<font>Black-24</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
						</control>
						<control type="label">
							<width>$PARAM[TextWidth]</width>
							<label>$PARAM[Label]</label>
							<height>24</height>
							<font>Black-24</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<visible>![Container.Content(movies) | Container.Content(tvshows)]</visible>
						</control>
						<control type="label">
							<top>24</top>
							<width>$PARAM[TextWidth]</width>
							<label>$PARAM[Label2]</label>
							<height>24</height>
							<font>Regular-20</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.2]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<visible>![Container.Content(movies) | Container.Content(tvshows)]</visible>
						</control>
					</control>
					<!-- Status -->
					<include>media_Status</include>
				</itemlayout>
				<focusedlayout width="$PARAM[ItemWidth]" height="$PARAM[ItemHeight]">
					<control type="group">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<control type="image">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<texture colordiffuse="$VAR[color:Text.2]">$PARAM[Fallback]</texture>
							<bordertexture border="10">$PARAM[Frame]</bordertexture>
							<bordersize>10</bordersize>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>$PARAM[ShowFallback]</visible>
						</control>
						<control type="label">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<label>$PARAM[Symbol]</label>
							<font>$PARAM[SymbolFont]</font>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
							<visible>ListItem.IsParentFolder</visible>
						</control>
						<control type="image">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<texture>$PARAM[Art]</texture>
							<bordertexture border="10">$PARAM[Frame]</bordertexture>
							<bordersize>10</bordersize>
							<aspectratio align="$PARAM[AspectRatioAlign]" aligny="$PARAM[AspectRatioAlignY]">$PARAM[AspectRatio]</aspectratio>
						</control>
						<control type="image">
							<width>$PARAM[ArtWidth]</width>
							<height>$PARAM[ArtHeight]</height>
							<texture colordiffuse="ff000000">views/overlay/landscape-fo.png</texture>
							<bordersize>10</bordersize>
							<aspectratio>stretch</aspectratio>
							<visible>!ListItem.IsParentFolder + ![String.IsEmpty(ListItem.Art(fanart)) + String.IsEmpty(ListItem.Art(thumb))]</visible>
							<visible>$PARAM[ShowOverlay]</visible>
						</control>
						<control type="image">
							<bottom>24</bottom>
							<width>100%</width>
							<height>30%</height>
							<texture>$PARAM[Logo]</texture>
							<aspectratio align="center" aligny="bottom">keep</aspectratio>
							<visible>!Container.Content(episodes)</visible>
							<visible>$PARAM[ShowLogo]</visible>
						</control>
						<control type="image">
							<left>24</left>
							<top>24</top>
							<width>100%</width>
							<height>30%</height>
							<texture>$PARAM[Logo]</texture>
							<aspectratio align="left" aligny="bottom">keep</aspectratio>
							<visible>Container.Content(episodes)</visible>
							<visible>$PARAM[ShowLogo]</visible>
						</control>
					</control>
					<!--info-->
					<control type="group">
						<bottom>48</bottom>
						<left>$PARAM[TextLeft]</left>
						<width>$PARAM[TextWidth]</width>
						<height>24</height>
						<visible>$PARAM[ShowInfo]</visible>
						<control type="textbox">
							<width>$PARAM[TextWidth]</width>
							<label>$PARAM[Label]</label>
							<height>60</height>
							<font>Black-24</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
						</control>
						<control type="label">
							<width>$PARAM[TextWidth]</width>
							<label>$PARAM[Label]</label>
							<height>24</height>
							<font>Black-24</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<visible>![Container.Content(movies) | Container.Content(tvshows)]</visible>
						</control>
						<control type="label">
							<top>24</top>
							<width>$PARAM[TextWidth]</width>
							<label>$PARAM[Label2]</label>
							<height>24</height>
							<font>Regular-20</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.2]</textcolor>
							<selectedcolor>$VAR[color:Accent]</selectedcolor>
							<visible>![Container.Content(movies) | Container.Content(tvshows)]</visible>
						</control>
					</control>
					<!-- Status -->
					<include>media_Status</include>
				</focusedlayout>
			</control>
		</definition>
	</include>

	<include name="info_Thumbnails">
		<param name="Top" default="108"/>
		<param name="Left" default="1208"/>
		<param name="Width" default="584"/>
		<param name="Height" default="972"/>
		<param name="ArtHeight" default="432"/>
		<param name="ArtWidth" default="756"/>
		<param name="TextWidth" default="544"/>
		<param name="TextHeight" default="365"/>
		<param name="Aspect" default="scale"/>
		<param name="AspectRatioAlign" default="right"/>
		<param name="AspectRatioAlignY" default="top"/>
		<param name="Description" default="$VAR[media:Description]"/>
		<param name="ShowDescription" default="true"/>
		<param name="Art" default="$VAR[art:Landscape]"/>
		<param name="Art2" default="$VAR[art:Square]"/>
		<param name="Logo" default="$INFO[ListItem.Art(clearlogo)]"/>
		<param name="ShowInfo" default="true"/>
		<definition>
			<!--media info-->
			<control type="group">
				<width>$PARAM[Width]</width>
				<left>$PARAM[Left]</left>
				<height>$PARAM[Height]</height>
				<top>$PARAM[Top]</top>
				<visible>$PARAM[ShowInfo]</visible>
				<control type="image">
					<width>$PARAM[Width]</width>
					<height>90</height>
					<texture colordiffuse="ff000000">colorize/30.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<width>$PARAM[Width]</width>
					<height>$PARAM[Height]</height>
					<texture colordiffuse="ff000000">colorize/10.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<control type="grouplist">
						<left>48</left>
						<top>0</top>
						<itemgap>0</itemgap>
						<orientation>vertical</orientation>
						<visible>$PARAM[ShowDescription]</visible>
						<control type="label">
							<width>$PARAM[TextWidth]</width>
							<label>$INFO[ListItem.Label]</label>
							<height>90</height>
							<font>Black-26</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
						<!--spacer-->
						<control type="label">
							<width>$PARAM[TextWidth]</width>
							<label></label>
							<height>30</height>
							<font></font>
							<visible>!String.IsEqual(ListItem.DBTYPE,movie) + IsEmpty(ListItem.Tagline) + !ListItem.IsCollection</visible>
						</control>
						<control type="textbox">
							<width>$PARAM[TextWidth]</width>
							<height>792</height>
							<label>$PARAM[Description]</label>
							<font>Slab-24</font>
							<textcolor>$VAR[color:Text.3]</textcolor>
						</control>
					</control>
				</control>
			</control>
		</definition>
	</include>
</includes>