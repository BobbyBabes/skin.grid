<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<menucontrol>7000</menucontrol>
	<views>10</views>
	<onload>ClearProperty(MenuOpen,Home)</onload>
	<controls>

		<!--menu trigger-->
		<control type="button" id="50">
			<onfocus>Control.SetFocus(10)</onfocus>
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<!--background-->
		<include content="background_Global">
			<param name="GridTexture">overlays/90.png</param>
		</include>

		<control type="group">
			<include>toggle_Menu</include>

			<!--Chrome-->
			<control type="group">
				<include>transition_Chrome</include>
				<include content="global_WindowChrome">
					<param name="Title">$VAR[window:Title.PVR]</param>
				</include>
			</control>

			<!--views-->			
			<include>transition_Content</include>

			<control type="epggrid" id="10">
				<left>128</left>
				<top>108</top>
				<width>1792</width>
				<height>720</height>
				<timeblocks>50</timeblocks>
				<progresstexture border="0,94,11,11" colordiffuse="$VAR[color:Text.2]">pvr/progress.png</progresstexture>
				<rulerunit>6</rulerunit>
				<onleft>7000</onleft>
				<onright></onright>
				<pagecontrol>10</pagecontrol>
				<include condition="String.IsEqual(Skin.String(epg.scrollspeed),instant)">epgscroll_Instant</include>
				<include condition="String.IsEqual(Skin.String(epg.scrollspeed),fast)">epgscroll_Fast</include>
				<rulerlayout width="256" height="90">
					<control type="label">
						<width>256</width>
						<height>90</height>
						<font>Regular-20</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[color:Accent]</textcolor>
						<visible>String.Contains(ListItem.Label,:)</visible>
					</control>
				</rulerlayout>
				<channellayout width="256" height="90">
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>72</width>
						<height>72</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>114</left>
						<width>108</width>
						<height>90</height>
						<font>Black-22</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
				</channellayout>
				<focusedchannellayout width="256" height="90">
					<control type="image">
						<width>246</width>
						<height>90</height>
						<texture colordiffuse="ff000000">colorize/20.png</texture>
					</control>
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>72</width>
						<height>72</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>114</left>
						<width>108</width>
						<height>90</height>
						<font>Black-22</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<selectedcolor>$VAR[color:Accent]</selectedcolor>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
				</focusedchannellayout>
				<itemlayout width="52" height="90">
					<control type="image" id="1">
						<width>52</width>
						<height>90</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="pvr/genres/0.png" border="5">$INFO[ListItem.Property(GenreType),pvr/genres/,.png]</texture>
						<bordertexture>c1olorize/100.png</bordertexture>
						<bordersize>1</bordersize>
					</control>
					<control type="label" id="2">
						<top>10</top>
						<width>30</width>
						<height>45</height>
						<label>$VAR[pvr:GuideLabel]</label>
						<font>Black-22</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<textoffsetx>24</textoffsetx>
					</control>
					<control type="label" id="3">
						<bottom>10</bottom>
						<width>30</width>
						<height>45</height>
						<label>$INFO[ListItem.Genre]</label>
						<font>Regular-18</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<textoffsetx>24</textoffsetx>
					</control>
				</itemlayout>
				<focusedlayout width="52" height="90">
					<control type="image" id="1">
						<width>52</width>
						<height>90</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="pvr/genres/0.png" border="5">$INFO[ListItem.Property(GenreType),pvr/genres/,.png]</texture>
						<bordertexture>colorize/100.png</bordertexture>
						<bordersize>5</bordersize>
					</control>
					<control type="label" id="2">
						<top>10</top>
						<width>30</width>
						<height>45</height>
						<label>$VAR[pvr:GuideLabel]</label>
						<font>Black-22</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<textoffsetx>24</textoffsetx>
					</control>
					<control type="label" id="3">
						<bottom>10</bottom>
						<width>30</width>
						<height>45</height>
						<label>$INFO[ListItem.Genre]</label>
						<font>Regular-18</font>
						<textcolor>$VAR[color:Accent]</textcolor>
						<textoffsetx>24</textoffsetx>
					</control>
				</focusedlayout>
			</control>

			<!-- Info -->
			<control type="grouplist">
				<left>438</left>
				<top>877</top>
				<width>1664</width>
				<height>180</height>
				<orientation>vertical</orientation>
				<control type="label">
					<left>$PARAM[TextLeft]</left>
					<width>1664</width>
					<label fallback="19055">$INFO[ListItem.Label]</label>
					<height>45</height>
					<font>Black-28</font>
					<aligny>center</aligny>
					<textcolor>$VAR[color:Accent]</textcolor>
				</control>
				<control type="label">
					<height>45</height>
					<width>1354</width>
					<label>$INFO[ListItem.StartTime,, - ]$INFO[ListItem.EndTime,,  |  ]$INFO[ListItem.StartDate,,  |  ]$INFO[ListItem.Genre]</label>
					<font>Regular-22</font>
					<textcolor>$VAR[color:Text.2]</textcolor>
					<aligny>top</aligny>
				</control>
				<control type="textbox">
					<height>50</height>
					<width>1354</width>
					<label>$VAR[media:Description]$VAR[media:Description]$VAR[media:Description]$VAR[media:Description]$VAR[media:Description]$VAR[media:Description]$VAR[media:Description]$VAR[media:Description]</label>
					<font>Slab-24</font>
					<textcolor>$VAR[color:Text.3]</textcolor>
					<aligny>top</aligny>
				</control>
			</control>

			<control type="image">
				<top>190</top>
				<left>374</left>
				<width>1547</width>
				<height>646</height>
				<texture colordiffuse="ff000000">colorize/20.png</texture>
			</control>

		</control>

		<!--menu-->
		<include>menu_Options</include>

	</controls>
</window>