							<width>640</width>
							<height>108</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Black-60</font>
							<textoffsetx>24</textoffsetx>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Home.1]</textcolor>
						</control>
					</control>
					<control type="group">
						<visible>Control.HasFocus(9000)</visible>
						<control type="image">
							<bottom>0</bottom>
							<width>640</width>
							<height>108</height>
							<include>screen_Dimensions</include>
							<texture colordiffuse="$VAR[color:Home.Main]">$VAR[color:Home.Opacity]</texture>
							<aspectratio align="center" aligny="top">stretch</aspectratio>
