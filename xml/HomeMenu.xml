<?xml version="1.0" encoding="UTF-8"?>
<includes>	
	<include name="home_Menu-vertical">
		<control type="list" id="9000">
			<top>100</top>
			<width>1920</width>
			<height>900</height>
			<onleft>RunScript(script.skinshortcuts,type=hidesubmenu&amp;mainmenuID=9000)</onleft>
			<onback>RunScript(script.skinshortcuts,type=hidesubmenu&amp;mainmenuID=9000)</onback>
			<onright>SetFocus(9100)</onright>
			<onright condition="Integer.IsGreater(ControlGroup(9100).NumItems(0))">SetFocus(9100)</onright>
			<ondown>9000</ondown>
			<orientation>vertical</orientation>
			<include>global_ListScroll</include>
			<animation type="Conditional" condition="ControlGroup(9100).HasFocus() + String.IsEqual(Skin.String(homemenu.type),vertical)">
				<effect type="Fade" time="250" start="100" end="0" tween="cubic" easing="none"/>
			</animation>
			<animation effect="slide" end="0,98" time="0" condition="String.IsEqual(Container(9000).NumItems,7)">Conditional</animation>
			<animation effect="slide" end="0,196" time="0" condition="String.IsEqual(Container(9000).NumItems,5)">Conditional</animation>
			<animation effect="slide" end="0,294" time="0" condition="String.IsEqual(Container(9000).NumItems,3)">Conditional</animation>
			<animation effect="slide" end="0,392" time="0" condition="String.IsEqual(Container(9000).NumItems,1)">Conditional</animation>

			<itemlayout width="1920" height="98">
				<!--main-->
				<control type="group">
					<visible>String.IsEmpty(ListItem.Property(isSubmenu))</visible>
					<animation effect="fade" start="100" end="25" time="150" condition="!String.IsEmpty(Container(9000).ListItem.Property(isSubmenu))" reversible="true">Conditional</animation>
					<control type="label">
						<width>128</width>
						<height>98</height>
						<font>Symbols-32</font>
						<label>$VAR[home:Symbol]</label>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
					<control type="label">
						<left>160</left>
						<width>1920</width>
						<height>90</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Thin-64</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
				</control>
				<!--sub-->
				<control type="group">
					<visible>!String.IsEmpty(ListItem.Property(isSubmenu))</visible>
					<control type="label">
						<width>128</width>
						<height>98</height>
						<font>Symbols-32</font>
						<label>$INFO[ListItem.Property(homeSymbol)]</label>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Text.2]</textcolor>
					</control>
					<control type="label">
						<left>160</left>
						<width>1920</width>
						<height>90</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Thin-46</font>
						<aligny>center</aligny>
						<textcolor>$VAR[color:Accent]</textcolor>
					</control>
				</control>
			</itemlayout>
			<focusedlayout width="1920" height="98">
				<control type="group">
					<visible>Control.HasFocus(9000)</visible>
					<!--main-->
					<control type="group">
						<visible>String.IsEmpty(ListItem.Property(isSubmenu))</visible>
						<control type="label">
							<width>128</width>
							<height>98</height>
							<font>Symbols-32</font>
							<label>$VAR[home:Symbol]</label>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.2]</textcolor>
						</control>
						<control type="label">
							<left>160</left>
							<width>1920</width>
							<height>90</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Black-72</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
					</control>
					<!--sub-->
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Property(isSubmenu))</visible>
						<control type="label">
							<width>128</width>
							<height>98</height>
							<font>Symbols-32</font>
							<label>&#58921;</label>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.2]</textcolor>
						</control>
						<control type="label">
							<left>160</left>
							<width>1920</width>
							<height>90</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Black-52</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
					</control>
				</control>
				<control type="group">
					<visible>!Control.HasFocus(9000)</visible>
					<!--main-->
					<control type="group">
						<visible>String.IsEmpty(ListItem.Property(isSubmenu))</visible>
						<control type="label">
							<width>128</width>
							<height>98</height>
							<font>Symbols-32</font>
							<label>$VAR[home:Symbol]</label>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.2]</textcolor>
						</control>
						<control type="label">
							<left>160</left>
							<width>1920</width>
							<height>90</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Black-72</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
					</control>
					<!--sub-->
					<control type="group">
						<visible>!String.IsEmpty(ListItem.Property(isSubmenu))</visible>
						<control type="label">
							<width>128</width>
							<height>98</height>
							<font>Symbols-32</font>
							<label>$INFO[ListItem.Property(homeSymbol)]</label>
							<align>center</align>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Text.2]</textcolor>
