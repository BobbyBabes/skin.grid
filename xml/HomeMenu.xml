							<left>160</left>
							<width>1920</width>
							<height>90</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Black-60</font>
							<aligny>center</aligny>
							<textcolor>$VAR[color:Accent]</textcolor>
						</control>
					</control>
				</control>
			</focusedlayout>
			<content>
				 <include>skinshortcuts-allmenus</include>
			</content>
		</control>

		<include content="home_Status">
			<param name="Left">128"</param>
			<param name="Width">1772"</param>
		</include>
	</include>

	<include name="home_Menu-Horizontal">
		<definition>
			<control type="wraplist" id="9000">
				<top>1080</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<onup>9000</onup>
				<onleft>8000</onleft>
				<onright>9100</onright>
				<ondown>9000</ondown>
				<focusposition>1</focusposition>
				<pagecontrol>80</pagecontrol>
				<include>global_ListScroll</include>
				<orientation>horizontal</orientation>
				<visible>String.IsEqual(Skin.String(homemenu.type),vertical2)</visible>
				<itemlayout width="640" height="1080">
