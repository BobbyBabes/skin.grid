<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="group">
			<include>global_WindowChrome</include>
			<include>fadeinout</include>
			<include>toggle_Menu</include>
			<visible>IntegerGreaterThan(Player.Volume,0) + !Window.IsActive(Home)</visible>
			<control type="image">
				<width>128</width>
				<height>108</height>
				<texture colordiffuse="ff000000">colorize/30.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<left>128</left>
				<width>1664</width>
				<height>108</height>
				<texture colordiffuse="ff000000">colorize/20.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="progress" id="29999">
				<left>128</left>
				<width>1664</width>
				<height>108</height>
				<info>Player.Volume</info>
				<texturebg colordiffuse="$VAR[color:Accent]">colorize/0.png</texturebg>
				<lefttexture></lefttexture>
				<midtexture colordiffuse="$VAR[color:Accent]">colorize/25.png</midtexture>
				<righttexture></righttexture>
			</control>
		</control>
		<control type="group">
			<include>fadeinout</include>
			<visible>IntegerGreaterThan(Player.Volume,0) + Window.IsActive(Home) + String.IsEqual(Skin.String(homemenu.type),vertical)</visible>
			<control type="progress" id="29999">
				<left>128</left>
				<width>1664</width>
				<height>98</height>
				<info>Player.Volume</info>
				<texturebg colordiffuse="$VAR[color:Accent]">colorize/0.png</texturebg>
				<lefttexture></lefttexture>
				<midtexture colordiffuse="$VAR[color:Accent]">colorize/25.png</midtexture>
				<righttexture></righttexture>
			</control>
			<!--
			<control type="label">
				<width>128</width>
				<height>101</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Symbols-32</font>
				<label>$VAR[window:Volume]</label>
			</control>
			-->

		</control>
		<control type="group">
			<left>138</left>
			<top>10</top>
			<include>fadeinout</include>
			<visible>IntegerGreaterThan(Player.Volume,0) + Window.IsActive(Home) + String.IsEqual(Skin.String(homemenu.type),stream)</visible>
			<control type="progress" id="29999">
				<left>128</left>
				<width>1772</width>
				<height>98</height>
				<info>Player.Volume</info>
				<texturebg colordiffuse="$VAR[color:Accent]">colorize/0.png</texturebg>
				<lefttexture></lefttexture>
				<midtexture colordiffuse="$VAR[color:Accent]">colorize/25.png</midtexture>
				<righttexture></righttexture>
			</control>
			<!--
			<include content="global_WindowChrome">
				<param name="Left">138</param>
				<param name="Width">1772</param>
				<param name="TextureWidth">1644</param>
				<param name="Height">98</param>
			</include>
			-->
		</control>
		<include condition="Window.IsVisible(fullscreenvideo)">global_Clock</include>
	</controls>
</window>