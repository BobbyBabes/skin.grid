<?xml version="1.0" encoding="UTF-8"?>
<window id="1150">
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>7000</menucontrol>

	<controls>

	<!--menu trigger-->
		<control type="button" id="5500">
			<onfocus>Control.SetFocus(50)</onfocus>
			<visible allowhiddenfocus="true">false</visible>
		</control>

	<!--background-->
		<include content="global_Background">
			<param name="GridTexture">overlays/108.png</param>
		</include>

		<control type="group">
			<include>toggle_Menu</include>

			<!--window chrome-->		
			<control type="group">
				<include>transition_Chrome</include>
				<include>global_Includes</include>
				<include content="global_WindowChrome">
					<param name="Label">$LOCALIZE[31532]</param>
				</include>
			</control>

			<!--list-->
			<control type="group">
				<visible>Control.IsVisible(50)</visible>
				<include>transition_ViewChange</include>
				<include content="view_List">
					<param name="UseCustomPath" value="true"/>
					<param name="Path" value="plugin://script.watchlist?type=episodes"/>
				</include>
			</control>

			<control type="group">
				<visible>Control.IsVisible(50)</visible>
				<control type="group">
					<!--landscape-->
					<include content="info_List">
						<param name="Art" value="$INFO[Container(50).ListItem.Art(thumb)]"/>
						<param name="Visible">true</param>
					</include>
					<!--square, fixed-->
					<include content="info_List">
						<param name="Visible">$EXP[Art.IsSquare]</param>
					</include>
					<!--square, keep-->
					<include content="info_List">
						<param name="Visible">$EXP[Art.IsThumb]</param>
						<param name="Width" value="756"/>
						<param name="ArtWidth" value="756"/>
						<param name="AspectRatio" value="keep"/>
						<param name="AspectRatioAlign" value="center"/>
						<param name="AspectRatioAlignY" value="top"/>
						<param name="ShowDescription" value="false"/>
					</include>
				</control>
				<!--portrait-->
				<include content="info_List">
					<param name="Visible">$EXP[Art.IsPortrait]</param>
					<param name="Width" value="668"/>
					<param name="ArtHeight" value="972"/>
					<param name="AspectRatio" value="scale"/>
					<param name="ShowDescription" value="false"/>
					<param name="ShowInfo" value="false"/>
					<param name="Views.ShowLogo" value="false"/>
					<param name="Art" value="$VAR[art:Portrait]"/>
					<param name="Fallback" value="views/fallback/portrait.png"/>
				</include>
			</control>


		</control>

		<!--scrollbars-->
		<include>global_Scrollbar</include>

		<!--menu-->
		<include>menu_Options</include>

	</controls>
</window>