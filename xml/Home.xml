<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<!--<onload condition="!Skin.HasSetting(FirstRunWidgets)">ActivateWindow(1106)</onload>-->

	<!-- Skin Shortcuts -->
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mode=single&amp;mainmenuID=9000&amp;group=mainmenu|optionsmenu)</onload>
	
	<!-- Skin Helper -->
	<onload condition="!Skin.HasSetting(SkinHelper.EnablePVRThumbs)">Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
	<onload condition="!Skin.HasSetting(SkinHelper.EnableMusicArt)">Skin.SetBool(SkinHelper.EnableMusicArt)</onload>
	<onload condition="!Skin.HasSetting(SkinHelper.EnableExtendedArt)">Skin.SetBool(SkinHelper.EnableExtendedArt)</onload>

	<!-- Collapse menu on return -->
	<onload condition="Skin.HasSetting(homemenu.collapse)">RunScript(script.skinshortcuts,type=hidesubmenu&amp;mainmenuID=9000)</onload>

	<controls>

		<!-- Preload weather -->
		<control type="label">
			<font></font>
			<label>$INFO[Weather.Conditions]</label>
		</control>

		<!-- Main menu layouts -->
		<include condition="String.IsEqual(Skin.String(homemenu.type),vertical) | String.IsEmpty(Skin.String(homemenu.type))">home_Menu-vertical</include>
		
		<include condition="String.IsEqual(Skin.String(homemenu.type),vertical2)">home_Menu-vertical2</include>
		
		<include content="home_Menu-stream" condition="String.IsEqual(Skin.String(homemenu.type),stream) + Skin.HasSetting(home.clock)">
			<param name="Top">108</param>
			<param name="Height">972</param>
		</include>
		
		<include content="home_Menu-stream" condition="String.IsEqual(Skin.String(homemenu.type),stream) + !Skin.HasSetting(home.clock)">
			<param name="Top">0</param>
			<param name="Height">screen_Height</param>
		</include>

		<control type="image">
			<right>48</right>
			<bottom>90</bottom>
			<width>330</width>
			<height>128</height>
			<texture>$INFO[Window(Home).Property(script.grab.fanart.Global.Logo)]</texture>
			<aspectratio>keep</aspectratio>
			<include>transition_HomeMenu</include>
			<fadetime>300</fadetime>
			<visible>Skin.HasSetting(home.fanartlogo)</visible>
		</control>

		<!-- Post startup -->
		<control type="group">
			<include>screen_Dimensions</include>
			<animation type="Conditional" condition="!String.IsEmpty(Window(Home).Property(script.grab.fanart.Ready)) | !System.HasAddon(script.grab.fanart)">
				<effect type="fade" start="0" end="100" time="0" delay="0"/>
				<effect type="slide" start="0,0" end="0,1080" time="500" easing="InOut" tween="cubic" delay="2000"/>
			</animation>
			<include>startup_Background</include>
			<control type="group">
				<centerleft>50%</centerleft>
				<top>498</top>
				<width>200</width>
				<height>168</height>
				<control type="image">
					<width>200</width>
					<height>84</height>
					<texture>logos/startup_01.png</texture>
					<aspectratio align="center">keep</aspectratio>
					<colordiffuse>$VAR[color:Accent]</colordiffuse>
				</control>
				<control type="image">
					<top>84</top>
					<width>200</width>
					<height>84</height>
					<texture>logos/startup_02.png</texture>
					<aspectratio align="center">keep</aspectratio>
					<colordiffuse>$VAR[color:Accent]</colordiffuse>
					<visible>!String.IsEmpty(Window(Home).Property(script.grab.fanart.Ready)) | !System.HasAddon(script.grab.fanart)</visible>
					<animation type="Conditional" condition="!String.IsEmpty(Window(Home).Property(script.grab.fanart.Ready)) | !System.HasAddon(script.grab.fanart)">
						<effect type="fade" start="0" end="100" time="250" delay="500"/>
						<effect type="slide" start="0,0" end="0,-84" time="500" easing="Out" tween="bounce" delay="500"/>
					</animation>
				</control>
			</control>
			<control type="group">
				<left>924</left>
				<bottom>108</bottom>
				<width>72</width>
				<height>72</height>
				<include>global_Busy</include>
				<visible>String.IsEmpty(Window(Home).Property(script.grab.fanart.Ready))</visible>
			</control>
		</control>
	</controls>
</window>