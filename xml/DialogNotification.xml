<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<controls>

		<control type="group">
			<animation effect="slide" time="100" end="-128,0" condition="Skin.HasSetting(home.clock)">Conditional</animation>
			<visible>Window.IsActive(home) + String.IsEqual(Skin.String(homemenu.type),vertical)</visible>
			<include content="global_Notification" condition="Window.IsActive(home) + String.IsEqual(Skin.String(homemenu.type),vertical)">
				<param name="Left">1164</param>
				<param name="Top">0</param>
				<param name="InfoTop">11</param>
				<param name="Height">98</param>
				<param name="Width">756</param>
			</include>
		</control>

		<control type="group">
			<visible>Window.IsActive(home) + String.IsEqual(Skin.String(homemenu.type),vertical2)</visible>
			<include content="global_Notification" condition="Window.IsActive(home) + String.IsEqual(Skin.String(homemenu.type),vertical2)">
				<param name="Left">1154</param>
				<param name="Top">10</param>
				<param name="InfoTop">11</param>
				<param name="Height">98</param>
				<param name="Width">756</param>
			</include>
		</control>

		<include content="global_Notification" condition="Window.IsActive(home) + String.IsEqual(Skin.String(homemenu.type),stream)">
			<param name="Left">1154</param>
			<param name="Top">10</param>
			<param name="InfoTop">11</param>
			<param name="Height">98</param>
			<param name="Width">756</param>
		</include>

		<include content="global_Notification" condition="!Window.IsActive(home) + String.IsEqual(Skin.String(view.list.art.Label),posters)">
			<param name="Left">1124</param>
			<param name="Height">108</param>
			<param name="Width">668</param>
			<param name="TextWidth">512</param>
		</include>

		<include content="global_Notification" condition="!Window.IsActive(home) + !String.IsEqual(Skin.String(view.list.art.Label),posters)">
			<param name="Left">1036</param>
			<param name="Height">108</param>
			<param name="Width">756</param>
		</include>

	</controls>
</window>